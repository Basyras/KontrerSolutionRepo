@page "/"
@foreach (var domain in DomainVMs)
{
    <domainBorder style="background-color:@GetColor(domain.MessageDomainInfo.DomainName,230,0);">
        <domainHeading>
            <domainHeadingText>
                @domain.MessageDomainInfo.DomainName
            </domainHeadingText>
            @domain.Messages.Where(x => x.RequestInfo.IsCommand == false).Count()
            <queriesCount>queries</queriesCount> |
            @domain.Messages.Where(x => x.RequestInfo.IsCommand == true).Count()
            <commandCount>commands</commandCount>
        </domainHeading>
        @foreach (var message in domain.Messages)
        {
            <RequestItem OnMessageSending="async (s,a)=>await SendMessage((s as RequestItem))" Request="message.RequestInfo" />
            <div style="height:1rem;" />
        }
    </domainBorder>
}