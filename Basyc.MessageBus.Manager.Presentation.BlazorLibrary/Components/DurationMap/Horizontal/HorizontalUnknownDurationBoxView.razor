@{
    var duration = EndTime - StartTime;
    string unknownStyle = $"width: {DurationViewHelper.GetDurationAsRem(duration, Scale)};";
}
<MudTooltip Arrow="true">
    <ChildContent>
        <horizontalUnknownDurationBoxView style="@unknownStyle">
            <unknownDurationLine/>
        </horizontalUnknownDurationBoxView>
    </ChildContent>
    <TooltipContent>
        <toolTipContent>
            name: unknown duration
            <br />
            start: @StartTime.Millisecond
            <br />
            end: @EndTime.Millisecond
            <br />
            dur: @duration.TotalMilliseconds ms
        </toolTipContent>
    </TooltipContent>
</MudTooltip>

@code {
    [Parameter, EditorRequired] public DateTimeOffset StartTime { get; init; }
    [Parameter, EditorRequired] public DateTimeOffset EndTime { get; init; }
    [Parameter, EditorRequired] public double Scale { get; set; }
    /// <summary>
    ///Hexadecimal string
    /// </summary>
    [Parameter, EditorRequired] public string Color { get; set; }
}
