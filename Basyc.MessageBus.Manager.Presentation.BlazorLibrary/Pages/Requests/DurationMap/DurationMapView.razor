@using Basyc.MessageBus.Manager.Application.Durations
<durationMap>

    @{
        DurationSegment previousSegment = null;
    }

    @foreach (var segment in DurationMap.Segments)
    {
        if (previousSegment is not null && previousSegment.EndTime != segment.StartTime)
        {
                @:|
        }
        <DurationBoxView DurationSegment="segment" />
        previousSegment = segment;
    }
</durationMap>



@code {
    [Parameter] public DurationMap DurationMap { get; set; }
}
