@using Kontrer.OwnerServer.OrderService.Domain.Orders.AccommodationOrder
@using Kontrer.OwnerClient.Application.Orders;
@using Kontrer.OwnerClient.Web.Presentation.BlazorWasm.Shared.Labels
@inherits MudBlazor.MudButton
<mainBorder>
    <statusRibbon class="@statusRibbonModifierClass"/>
    <contentContainer>
        <statusLabel class="@statusLabelModifierClass">@statusText</statusLabel>        
        <startDate><TimeLabel Time="Order.Order.Requirment.From" /> </startDate>
        <endDate> <TimeLabel Time="Order.Order.Requirment.To" /> </endDate>
        <customerName>@Order.Customer.FirstName @Order.Customer.SecondName</customerName>
        <peopleCount><PeopleCount Count="Order.Order.Requirment.Rooms.Sum(x=>x.People.Count)" /></peopleCount>
        <roomCount><RoomCount Count="Order.Order.Requirment.Rooms.Count" /></roomCount>
    </contentContainer>
</mainBorder>